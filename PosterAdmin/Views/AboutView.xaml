<UserControl x:Class="PosterAdmin.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <materialDesign:Card Margin="16" Padding="24">
        <StackPanel>
            <TextBlock Text="PosterAdmin 정보" 
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       Margin="0,0,0,16" />
            
            <TextBlock Text="이 애플리케이션은 .NET 9.0 WPF Material Design 보일러플레이트입니다." 
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,8" />
            
            <TextBlock Text="기술 스택:" 
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Margin="0,16,0,8" />
            
            <StackPanel Margin="16,0,0,0">
                <TextBlock Text="• .NET 9.0" Style="{StaticResource MaterialDesignBody2TextBlock}" />
                <TextBlock Text="• WPF (Windows Presentation Foundation)" Style="{StaticResource MaterialDesignBody2TextBlock}" />
                <TextBlock Text="• Material Design in XAML" Style="{StaticResource MaterialDesignBody2TextBlock}" />
                <TextBlock Text="• LiteDB (Local Database)" Style="{StaticResource MaterialDesignBody2TextBlock}" />
                <TextBlock Text="• MVVM Pattern" Style="{StaticResource MaterialDesignBody2TextBlock}" />
            </StackPanel>
        </StackPanel>
    </materialDesign:Card>
</UserControl> 